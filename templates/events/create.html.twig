{% extends 'base.html.twig' %}

{% block title %}Create New Event{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/to-do-list.css') }}">
{% endblock %}

{% block body %}
    <div class="container content my-4">
        <h1>Create a New Event</h1>

        <div class="mb-3">
            {{ form_start(form) }}

            <div class="mb-3">
                {{ form_label(form.name) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.name) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.event_date) }}
                {{ form_widget(form.event_date, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.event_date) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.event_time) }}
                {{ form_widget(form.event_time, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.event_time) }}
            </div>

            <button type="submit" class="btn btn-primary" id="event_submit">Create Event</button>
            {{ form_end(form) }}
        </div>

    </div>
{% endblock %}
